bundle install

PHANTOM_JS_VERSION=1.9.8

curl -sSL https://bitbucket.org/ariya/phantomjs/downloads/phantomjs-$PHANTOM_JS_VERSION-linux-x86_64.tar.bz2 | tar xjC /tmp
mkdir -p .phantomjs/$PHANTOM_JS_VERSION/x86_64-linux/bin
ln -s tmp/phantomjs-$PHANTOM_JS_VERSION/bin/phantomjs .phantomjs/$PHANTOM_JS_VERSION/x86_64-linux/bin/phantomjs

cp config/database.yml.example config/database.yml
bundle exec rake db:setup